@model projeto.Models.VerificationModel

@{
    ViewData["Title"] = "Verification Code";
}

<div class="container login-page">
    <div class="login-container">
        <h2>Verification Code</h2>
        <p class="text-muted">Enter the code sent to your email.</p>

        <form asp-action="VerificationCode" method="post">
            <div class="form-group">
                <input asp-for="VerificationCode" class="form-control form-control-lg" placeholder="Enter verification code" />
                <span asp-validation-for="VerificationCode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Verify Code</button>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["Error"]
            </div>
        }
    </div>
</div>
