@model projeto.Models.LoginModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container login-page">
    <div class="login-container">
        <h2>Forgot Password</h2>
        <p class="text-muted">Enter your email to receive a verification code.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Send Code</button>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["Error"]
            </div>
        }
    </div>
</div>
