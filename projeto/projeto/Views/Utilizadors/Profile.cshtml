@model projeto.Models.Utilizador

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-success text-white text-center">
                    <h3>Welcome, <b>@Model.Nome </b></h3>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title">Profile Information</h5>
                        <a href="@Url.Action("Edit", "Utilizadors", new { id = Model.UtilizadorId })" class="btn btn-outline-dark btn-sm">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Nome:</strong> @Model.Nome</p>
                            <p><strong>Morada:</strong> @Model.Morada</p>
                            <p><strong>Código Postal:</strong> @Model.CodigoPostal</p>
                            <p><strong>Telemóvel:</strong> @Model.Telemovel</p>
                            <p><strong>País:</strong> @Model.Pais</p>
                            <p><strong>Pontos:</strong> @Model.Pontos</p>
                            <p><strong>Tipo de utilizador:</strong> @Model.EstadoConta</p>
                        </div>
                        <div class="col-md-3">
                            <img src="@Url.Content(Model.ImagePath)" class="img-fluid rounded-circle" alt="Profile Image" width="150" height="150" />
                        </div>
                    </div>

                    <div class="btn-group w-100" role="group">
                        <a href="@Url.Action("MyAuctions", "Auctions", new { userId = Model.UtilizadorId })" class="btn-profile">
                            My Auctions
                        </a>
                        <a href="@Url.Action("ConfirmPassword", "Utilizadors", new { id = Model.UtilizadorId })" class="btn-profile">
                            Change Password
                        </a>
                        <button id="cancel-account-btn" class="btn-profile cancel-btn">
                            Cancel Account
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

